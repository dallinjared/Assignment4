@{
    ViewData["Title"] = "Movie List";
}

@model IEnumerable<Assignment3.Models.MovieForm>

<div class="text-center table-sm">
    <h1 class="display-4">Movie List</h1>
    <h2>These are the movies we have available!</h2>
    <h6><a asp-action="AddMovie">Add Another Movie</a></h6>

    <table class="table">
        <caption>List of Movies</caption>
        <thead class="thead-dark">
            <tr>
                <th scope="col">Category</th>
                <th scope="col">Title</th>
                <th scope="col">Year</th>
                <th scope="col">Director</th>
                <th scope="col">Rating</th>
                <th scope="col">Edited</th>
                <th scope="col">Lent To</th>
                <th scope="col">Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Assignment3.Models.MovieForm x in Model)
            {
                @if (x.title != "Independence Day")
                {
                    <tr scope="row">
                        <td>@x.category</td>
                        <td>@x.title</td>
                        <td>@x.year</td>
                        <td>@x.director</td>
                        <td>@x.rating</td>
                        <td>@x.edited</td>
                        <td>@x.lentTo</td>
                        <td>@x.notes</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
