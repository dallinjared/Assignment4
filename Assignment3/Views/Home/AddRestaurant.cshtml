@{
    ViewData["Title"] = "Add Restaurant";
}

@model Assignment3.Models.RestaurantForm

<div class="text-center">
    <h1 class="display-4">Add a Restaurant</h1>
    <form class="text-left" asp-action="AddRestaurant" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="ClientName">Name:</label>
                <input asp-for="ClientName" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RestaurantName">Restaurant Name:</label>
                <input asp-for="RestaurantName" class="form-control" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FavoriteDish">Favorite Dish:</label>
                <input asp-for="FavoriteDish" class="form-control" />
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RestaurantPhone">Restaurant Phone:</label>
                <input asp-for="RestaurantPhone" class="form-control" />
            </div>
        </div>
        <div class="form-row justify-content-center">
            <button class="btn btn-dark col-md-4" type="submit">Add Restaurant to List</button>
            <div asp-validation-summary="ModelOnly"></div>
        </div>
    </form>
</div>